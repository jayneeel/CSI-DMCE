<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_event_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/white"
    style="@style/Widget.Material3.CardView.Elevated">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_event_info_conatiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/event_info_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_person_black_24"
            app:riv_corner_radius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_info_student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021DSCO002"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toEndOf="@id/event_info_avatar"
            app:layout_constraintTop_toTopOf="@id/event_info_avatar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_info_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jayneel Kanungo"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toEndOf="@id/event_info_avatar"
            app:layout_constraintTop_toBottomOf="@id/event_info_student_id"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_info_student_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comp Department"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/lato"
            app:layout_constraintStart_toEndOf="@id/event_info_avatar"
            app:layout_constraintTop_toBottomOf="@id/event_info_student_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


