        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_area_event_info"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="9"
            android:background="@drawable/search_style"
            android:drawableLeft="@drawable/ic_round_search_24"
            android:drawableTint="#6D6D6D"
            android:fontFamily="@font/lato"
            android:hint="Search Registrants..."
            android:padding="15dp"
            android:inputType="text"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/text_view_event_info_title"
            android:layout_below="@+id/text_view_event_info_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_area_event_info"
            android:id="@+id/rv_event_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_view_event_info_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_area_event_info"
            android:layout_marginStart="40dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/lato"
            android:text="NO REGISTRATION YET"
            android:textColor="#3A3A3A"
